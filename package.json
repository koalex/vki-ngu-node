{
  "name": "vki-ngu-node",
  "version": "1.0.0",
  "description": "Курс по node.js для студентов ВКИ НГУ",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "test": "cross-env NODE_ENV=test mocha \"./test/*.js\" --recursive --exit",
    "test:smoke": "cross-env NODE_ENV=test mocha \"./test/smoke.js\" --recursive --exit",
    "commit": "./node_modules/cz-customizable/standalone.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:smoke",
      "pre-push": "npm test"
    }
  },
  "author": "",
  "dependencies": {
    "async-busboy": "^1.0.1",
    "bunyan": "^1.8.12",
    "config": "^3.3.1",
    "cookies": "^0.8.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "keygrip": "^1.1.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-passport": "^4.1.3",
    "koa-response-time": "^2.1.0",
    "koa-router": "^8.0.8",
    "koa-static": "^5.0.0",
    "koa-useragent": "^4.0.0",
    "mongoose": "^5.9.14",
    "mozjpeg": "^6.0.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "socket.io": "^2.3.0",
    "socket.io-adapter": "^1.1.2",
    "socket.io-redis": "^5.2.0"
  },
  "devDependencies": {
    "commitizen": "^4.1.2",
    "cz-customizable": "^6.2.0",
    "husky": "^4.2.5",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2"
  }
}
